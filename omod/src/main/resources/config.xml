<?xml version="1.0" encoding="UTF-8"?>

<module configVersion="1.2">

	<!-- Module Properties -->
	<id>billingservices</id>
	<name>UCC Billing Services Module</name>
	<version>1.0-SNAPSHOT</version>
	<package>org.openmrs.module.billingservices</package>
	<author>Eric Mwailunga</author>
	<description>Manages billing for services or products ordered, sales and overall work flows.</description>

	<require_version>2.1.0</require_version>
    <require_modules>
		<require_module version="2.17">org.openmrs.module.webservices.rest</require_module>
		<require_module version="${bahmniVersion}">org.bahmni.module.bahmnicore</require_module>
		<require_module version="${pharmacy-ucc}">org.openmrs.module.pharmacy</require_module>
	</require_modules>

	<!-- Module Activator -->
	<activator>org.openmrs.module.billingservices.BillingActivator</activator>

	<!-- Maps hibernate file's, if present -->
	<mappingFiles>
				
	</mappingFiles>

	<!-- Internationalization -->
	<!-- All message codes should start with ${project.parent.artifactId}. -->
	<messages>
		<lang>en</lang>
		<file>messages.properties</file>
	</messages>
	<messages>
		<lang>fr</lang>
		<file>messages_fr.properties</file>
	</messages>
	<messages>
		<lang>es</lang>
		<file>messages_es.properties</file>
	</messages>
	<!-- /Internationalization -->

